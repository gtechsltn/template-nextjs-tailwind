{
  "name": "template-nextjs-tailwind",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "yarn dev",
    "dev": "concurrently \"yarn:dev:*\"",
    "dev:next": "next dev",
    "dev:tailwind": "npx tailwindcss -i src/styles/style.css -o src/styles/build.css --minify --watch",
    "build": "yarn build:tailwind && yarn build:next",
    "build:next": "next build",
    "build:tailwind": "npx tailwindcss -i src/styles/style.css -o src/styles/build.css --minify",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "12.1.6",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "tailwindcss": "^3.0.24"
  },
  "devDependencies": {
    "@types/node": "17.0.36",
    "@types/react": "18.0.9",
    "concurrently": "^7.2.1",
    "eslint": "8.16.0",
    "eslint-config-next": "12.1.6",
    "typescript": "4.7.2"
  }
}
